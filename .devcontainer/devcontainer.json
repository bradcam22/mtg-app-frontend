// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "Node.js",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"mounts": [
        "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind",
        "source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind"
    ],
	"remoteUser": "node",
	"forwardPorts": [3000],
	"postCreateCommand": "pnpm install && pnpm add chart.js recharts",
	"customizations": {
		"vscode": {
			"settings": {
				"editor.formatOnSave": true,
				"editor.defaultFormatter": "vscode.typescript-language-features"
			},
			"extensions": [
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"bradlc.vscode-tailwindcss",
				"getcursor.cursor-vscode"
			]
		}
	}
}